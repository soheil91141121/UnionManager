@model UnionManager.Models.DomainModels.TradeGroup

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a href="/Home/Index"><i class="icon-home"></i>خانه</a></li>
            <li><a href="/GroupAndColor/Groups">گروه های صنف</a></li>
            <li class="active">ویرایش گروه صنف</li>
        </ul>
        <!--breadcrumbs end -->
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <section class="panel">
            <header class="panel-heading">ویرایش گروه صنف &nbsp;<span style="color: #a55518; font-style: normal; font-size: 13px;">@Model.Name</span></header>
            <div class="panel-body">
                @using (Html.BeginForm("EditTradeGroup", "GroupAndColor", FormMethod.Post, new { autocomplete = "off" }))
                {
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name) <i class="required-field">*</i>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "txt_Name", placeholder = "نام گروه صنف را وارد کنید" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                    <button type="submit" class="btn btn-success" id="btn_EditTradeGroup">ذخیره</button>
                }
            </div>
        </section>
    </div>
</div>

