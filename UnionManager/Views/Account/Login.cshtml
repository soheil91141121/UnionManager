<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/Contents/Template/FlatlabRTL/img/favicon.html">

    <title>ورود به سیستم</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Contents/Template/FlatlabRTL/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Contents/Template/FlatlabRTL/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Contents/Template/FlatlabRTL/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Contents/Template/FlatlabRTL/css/style.css" rel="stylesheet">
    <link href="~/Contents/Template/FlatlabRTL/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="login-body">
    <div class="container">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin", style = "box-shadow: 0px 0px 2px #b3b3b3;" }))
        {
            <h2 class="form-signin-heading">ورود به پنل کاربری</h2>
            <div class="login-wrap">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-block alert-danger fade in">
                        <i class="icon-warning-sign"></i> &nbsp; @ViewBag.Message
                    </div>
                }
                <input type="text" name="Username" class="form-control" placeholder="نام کاربری" autofocus>
                <input type="password" name="Password" class="form-control" placeholder="کلمه عبور">
                @Html.CheckBox("RememberMe", false, new { id = "chbx_RememberMe" })
                @Html.Label("مرا به خاطر بسپار", new { @for = "chbx_RememberMe", style = "color: rgba(0,0,0,0.5)" })
                <div style="margin-top: 10px;">
                    <input type="text" name="Captcha" class="form-control" placeholder="حاصل تصویر امنیتی" style="width: 45%; display: inline; margin-bottom: 0px; margin-left: 10px;" required />
                    <img alt="Captcha" src="~/Captcha/GetCaptchaImage" id="img_Captcha" />
                </div>
                <button class="btn btn-lg btn-login btn-block" style="margin-top: 15px;" type="submit">ورود</button>
            </div>
        }
    </div>
</body>
</html>
