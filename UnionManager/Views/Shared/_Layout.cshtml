<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/Contents/Template/FlatlabRTL/img/favicon.html">

    <title>پنل مدیریت اتحادیه حمل و نقل</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Contents/Template/FlatlabRTL/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Contents/Template/FlatlabRTL/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Contents/Template/FlatlabRTL/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Contents/Template/FlatlabRTL/css/style.css" rel="stylesheet">
    <link href="~/Contents/Template/FlatlabRTL/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->

    @RenderSection("styles", false)
</head>

<body>

    <section id="container" class="">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder"></div>
            </div>
            <!--logo start-->
            <a href="/Home/Index" class="logo" style="font-size: 15px; padding-top: 5px;"><span>اتحادیه حمل و نقل</span></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu"></div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="top-nav">
                    <!--search & user info start-->
                    <ul class="nav pull-right top-menu">
                        <!-- user login dropdown start-->
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                @{
                                    var image = Html.Action("GetUserImage", "Home");
                                    if (image.ToString() != "")
                                    {
                                        <img src="~/Files/UploadImages/@image" width="29" height="29" />
                                    }
                                    else
                                    {
                                        <img src="~/Files/UploadImages/default.png" width="29" height="29" />
                                    }
                                }
                                <span class="username">@User.Identity.Name</span>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu extended logout">
                                <div class="log-arrow-up"></div>
                                <li><a href="/Profile/ProfileDetail"><i class="icon-suitcase"></i>پروفایل</a></li>
                                <li><a href="#"><i class="icon-cog"></i>تنظیمات</a></li>
                                <li><a href="#"><i class="icon-bell-alt"></i>اعلام ها</a></li>
                                <li><a href="/Account/LogOut"><i class="icon-key"></i>خروج</a></li>
                            </ul>
                        </li>
                        <!-- user login dropdown end -->
                    </ul>
                    <!--search & user info end-->
                </div>
                                    }
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="active">
                        <a class="" href="/Home/Index">
                            <i class="icon-dashboard margin-right-5"></i>
                            <span>صفحه اصلی</span>
                        </a>
                    </li>
                    @if (User.IsInRole("Admin") || User.IsInRole("HoleBoss"))
                    {
                        <li>
                            <a class="" href="/Relation/Relation">
                                <i class="icon-rocket margin-right-5"></i>
                                <span>ثبت صنف</span>
                            </a>
                        </li>
                        <li>
                            <a class="" href="/Trade/Trades">
                                <i class="icon-sitemap margin-right-5"></i>
                                <span>اصناف</span>
                            </a>
                        </li>
                        <li>
                            <a class="" href="/User/Users">
                                <i class="icon-user margin-right-5"></i>
                                <span>کاربران</span>
                            </a>
                        </li>
                        <li>
                            <a class="" href="/Vehicle/Vehicles">
                                <i class="icon-truck margin-right-5"></i>
                                <span>وسایل نقلیه</span>
                            </a>
                        </li>
                        <li>
                            <a class="" href="/GroupAndColor/Groups">
                                <i class="icon-group margin-right-5"></i>
                                <span>گروه ها و رنگ ها</span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Boss"))
                    {
                        <li>
                            <a class="" href="/Boss/Details">
                                <i class="icon-group margin-right-5"></i>
                                <span>رانندگان و وسایل نقلیه</span>
                            </a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a class="" href="/Account/LogOut">
                                <i class="icon-signout margin-right-5"></i>
                                <span>خروج</span>
                            </a>
                        </li>
                    }
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper" id="main-content-in">
                <!-- page start-->

                @RenderBody()

                <!-- page end-->
            </section>
        </section>
        <!--main content end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/Contents/Template/FlatlabRTL/js/jquery.js"></script>
    <script src="~/Contents/Template/FlatlabRTL/js/jquery-ui-1.9.2.custom.min.js" type="text/javascript"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Contents/Template/FlatlabRTL/js/bootstrap.min.js"></script>
    <script src="~/Contents/Template/FlatlabRTL/js/jquery.scrollTo.min.js"></script>
    <script src="~/Contents/Template/FlatlabRTL/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/scripts/Noty/jquery.noty.js"></script>
    @*<script src="~/scripts/ajaxfileupload.js"></script>*@
    <!--common script for all pages-->
    <script src="~/Contents/Template/FlatlabRTL/js/common-scripts.js"></script>

    @RenderSection("scripts", false)

</body>
</html>
