@model UnionManager.Models.DomainModels.Color

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a href="/Home/Index"><i class="icon-home"></i>خانه</a></li>
            <li><a href="/GroupAndColor/Groups">رنگ ها</a></li>
            <li class="active">افزودن رنگ</li>
        </ul>
        <!--breadcrumbs end -->
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <section class="panel">
            <header class="panel-heading">
                افزودن رنگ
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("AddColor", "GroupAndColor", FormMethod.Post, new { autocomplete = "off" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name) <i class="required-field">*</i>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "txt_Name", placeholder = "نام رنگ را وارد کنید" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                    <button type="submit" class="btn btn-success" id="btn_AddColor">ذخیره</button>
                }
            </div>
        </section>
    </div>
</div>

